{
    "name": "root-cause-sink",
    "config": {
      "connector.class": "io.zeebe.kafka.connect.ZeebeSinkConnector",
      "tasks.max": "1",
      "key.converter": "org.apache.kafka.connect.json.JsonConverter",
      "key.converter.schemas.enable": false,
      "value.converter": "org.apache.kafka.connect.json.JsonConverter",
      "value.converter.schemas.enable": false,
      "topics": "replyFromRootCauseService",
  
      "zeebe.client.broker.contactPoint": "zeebe:26500",
      "zeebe.client.requestTimeout": "10000",
      "zeebe.client.security.plaintext": true,
    
      "message.path.messageName": "$.replyTopic",
      "message.path.correlationKey": "$.id"
      
    }
  }